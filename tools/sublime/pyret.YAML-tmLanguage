patterns:
- comment: Delimiters
  name: keyword.other.delimiter.arr
  match: (!|\.|\||\(|\)|->|=>|:=|=|\[|\]|{|}|::|:)

- comment: Now for basic keywords
  name: keyword.control.arr
  match: \b(var\b|fun\b|fun:\s|end\b|with:\s|sharing:\s|data\b|import\b|provide\b|as\b|try:\s|except\b|when\b|for\b|from\b|check:\s|where:\s|doc:\s|and\b|or\b|not\b|else:\s|if\b|else\b|cases\b|is==\s|is=~\s|is<=>\s|is-not==\s|is-not=~\s|is-not<=>\s|is-not\b|is\s|raises\b|deriving\b|ref\b|graph:\s|m-graph:\s|block:\s|satisfies\b|shadow\b|lam\b|type-let\b|provide-types\b|newtype\b|type\b)

- comment: operators
  name: keyword.operator.arr
  match: ( \+ | - | \/ | \* | > | < | >= | <= | <> )

- comment: comments
  name: comment.line.number-sign.arr
  match: (\#.*$)

- comment: strings
  name: string.quoted.arr
  begin: (\s\")
  end: (\")

- comment: strings
  name: string.quoted.arr
  begin: (\s\')
  end: (\')

- comment: strings
  name: string.quoted.arr
  begin: (\s```)
  end: (```)

- comment: numbers
  name: constant.numeric.arr
  match: ([0-9]+)
  # ([^a-zA-Z][0-9]+)



- comment: 
       /* Don't indentation
        *  <?, </, <!
        * <whatever></whatever>
        * <whatever />
        * <% %>
        * <!-- -->
        * <%-- --%>
        *
        * Do indent:
        *  <whatever>
        *  <%
        *  <!--
        *  <%--
        *
        * Decrease indent for:
        *  </whatever>
        *  -->
        *  --%>
        */
    decreaseIndentPattern: ^\s*(</[^>]+>|-->|--%>)
    highlightPairs:
        ( ) [ ] { } "\"" "\"" < >
    increaseIndentPattern:
        ^\s*<(([^!/?]|%)(?!.+?([/%]>|</.+?>))|[%!]--\s*$)